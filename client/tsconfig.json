{
  "compilerOptions": {
    "types": ["node", "react", "react-dom"], // Add your required types here
    "typeRoots": ["./node_modules/@types"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    // "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true,
    "baseUrl": "./src", // Adjust the base URL based on your project structure
    "paths": {
      "reactjs-social-login": ["/component/client/auth/Signup/reactjs-social-login/reactjs-social-login"] // Add the correct path to your module
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
